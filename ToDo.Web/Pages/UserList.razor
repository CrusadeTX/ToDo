@page "/"
@inherits UserListBase
<h3>User List</h3>
@if (Users == null)
{
    <div class="spinner"></div>
}
else
{
    <div>
    <a href="@($"createuser/")" class="btn btn-primary m-1">Create User</a>
    </div>
    <div class="card-deck">
        @foreach (var user in Users)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@user.FName @user.LName</h3>
                </div>
                <div class="card-footer text-center">
                    <a href="@($"userdetails/{user.UserId}")" class="btn btn-primary m-1">View</a>

                    <a href="@($"edituser/{user.UserId}")" class="btn btn-primary m-1">Edit</a>

                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}