@page  "/ToDoNotedetails/{Id}"
@inherits ToDoNoteDetailsBase
<h3>ToDoNoteDetails</h3>

<div class="card-deck">
   
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@toDoNote.ToDoTitle</h3>
            </div>
            <div class="card-body">
                <p>@toDoNote.ToDoText</p>
                <textarea>User: @toDoNote.UserId</textarea>
                <p>IsDone: @toDoNote.IsDone</p>
                @if (toDoNote.User != null)
                {
                <p> Assigned User: @toDoNote.User.FName @toDoNote.User.LName </p>
                }

            </div>
            <div class="card-footer text-center">
                <a href="/ToDoNotes" class="btn btn-primary m-1">Back</a>

                <a href="@($"edittodonote/{toDoNote.ToDoNoteId}")" class="btn btn-primary m-1">Edit</a>

                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
</div>
