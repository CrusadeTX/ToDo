@page  "/ToDoNotes"
@inherits ToDoNoteListBase
<h3>To Do Note List</h3>
@if (ToDoNotes == null)
{
    <div class="spinner"></div>
}
else
{
    <div>
        <a href="@("/createtodo")" class="btn btn-primary m-1">Add new ToDo</a>
    </div>
    <div class="card-deck">
        @foreach (var toDoNote in ToDoNotes)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@toDoNote.ToDoTitle</h3>
                </div>
                <div class="card-footer text-center">
                    <a href="@($"ToDoNotedetails/{toDoNote.ToDoNoteId}")" class="btn btn-primary m-1">View</a>

                    <a href="@($"edittodonote/{toDoNote.ToDoNoteId}")" class="btn btn-primary m-1">Edit</a>

                    <a href="@($"edittodonote/{toDoNote.ToDoNoteId}")" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}
